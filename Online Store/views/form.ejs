<%- include('layouts/header') -%>

    <body>
        <h1>Online Store</h1>
        <%- include('layouts/nav') -%>

           
        <div id="productList">
            <figure>
                <img src="images/jacket.png" alt="Jacket">
                <figcaption>Jacket <del>$50</del> <ins>$45</ins></figcaption>
            </figure>
            <figure>
                <img src="images/cap.png" alt="Cap">
                <figcaption>Cap <del>$15</del> <ins>$9</ins></figcaption>
            </figure>
            <figure>
                <img src="images/gloves.png" alt="Gloves">
                <figcaption>Gloves <ins>$10</ins></figcaption>
            </figure>
            
        </div>
        <div id="mainContainer">
            <form action="" method="post" onsubmit="">
                <h2>Customer Form</h2>
                <label for="name" class="lableSize">Name</label>&nbsp;
                <input type="text" name="name" id="name"><br><br>
                <label for="email" class="lableSize">Email</label>&nbsp;&nbsp;
                <input type="text" name="email" id="email"><br><br>
                <label for="address" class="lableSize2">Address</label>&nbsp;
                <input type="text" name="address" id="address"><br><br>
                <label for="city" class="lableSize">City</label>&nbsp;&nbsp;&nbsp;&nbsp;
                <input type="text" name="city" id="city"><br><br>
                <label for="province" class="lableSize2">Province</label>
                <select name="province" id="province">
                    <option value="-1">Select</option>
                    <option value="1">Alberta</option>
                    <option value="2">British Columbia</option>
                    <option value="3">Manitoba</option>
                    <option value="4">New Brunswick</option>
                    <option value="5">Newfoundland & Labrador</option>
                    <option value="6">Nova Scotia</option>
                    <option value="7">Ontario</option>
                    <option value="8">Prince Edward Island</option>
                    <option value="9">Quebec</option>
                    <option value="10">Saskatchewan</option>
                </select>
                <br><br>
                <label for="phone" class="lableSize">Phone</label>
                <input type="text" name="phone" id="phone"><br><br>

                <h2>Purchase Details</h2>
                <label for="jacket" class="lableSize3">Enter number of Jacket</label><input type="text" name="jacket"
                    placeholder="Enter the number" data="45" class="product"><br><br>
                <label for="cap" class="lableSize">Enter number of Cap</label><input type="text" name="cap"
                    placeholder="Enter the number" data="9" class="product"><br><br>
                <label for="gloves" class="lableSize3">Enter number of Gloves</label><input type="text" name="gloves"
                    placeholder="Enter the number" data="10" class="product"><br><br>
                
                <input type="submit" name="Submit">
                <input type="reset" name="Clear">
            </form>

            <div id="output">
                <h2>Receipt</h2>
                <p id="errors">
                    <%if(typeof(errors)!='undefined'){ for(let e of errors){%>
                        <p>
                            <%= e.msg %>
                        </p>
                        <%}%>
                            <p>
                                <%= '--Please fix the above errors' %>
                            </p>
                            <%} %>
                </p>

                <% if(typeof(name) !='undefined' ){ %>
                    <table>
                        <tr>
                            <th>Name</th>
                            <td>
                                <%= name%>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Email</th>
                            <td>
                                <%= email %>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Address</th>
                            <td>
                                <%= address %>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Province</th>
                            <td>
                                <%= provinceName %>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr>
                            <th>Phone</th>
                            <td>
                                <%= phone %>
                            </td>
                            <td></td>
                            <td></td>
                        </tr>
                        <tr><th></th><th id="purchased"><%= 'Product Purchased' %></th><th></th></tr>
                        <tr>
                            <th>Product Name</th><th>Quantity</th><th>Unit Price</th><th>Cost</th>
                        </tr>
                        <% for(let i = 0; i < productSelected.prodPriceList.length; i++){%>
                            <tr>
                                <td><%= productSelected.prodPriceList[i].name.toUpperCase() %></td>
                                <td><%= productSelected.prodPriceList[i].quntity %></td>
                                <td><%= productSelected.prodPriceList[i].price %></td>
                                <td><%= productSelected.prodPriceList[i].subTotal %></td>
                            </tr>
                       <% }%>
                                <tr>
                                    <th>Sub Total</th>
                                    <th></th>
                                    <th></th>
                                    <th><%= productSelected.total.toFixed(2) %></th>
                                </tr>
                                <tr>
                                    <th>Province Tax</th>
                                    <th></th>
                                    <th></th>
                                    <th><%= provinceTaxAmt %></th>
                                </tr>
                                <tr>
                                    <th>Total</th>
                                    <th></th>
                                    <th></th>
                                    <th><%= productSelected.grandTotal.toFixed(2) %></th>
                                </tr>
                    </table>
                    <% }%>
            </div>
        </div>
        <footer>
            <p>&copy; Online Store 2024</p>
        </footer>
    </body>
    <%- include('layouts/footer') -%>